@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";

}
<script src="~/Assets/js/customJs/TissueBank/TissueBankController.js"></script>
<script src="~/Assets/js/customJs/TissueBank/TissueBankService.js"></script>
<link href="~/Assets/css/custom/order.css" rel="stylesheet" />

<div ng-controller="OrderController">
    <div class="loading-spiner-holder customloader" id="loadingDiv" data-loading>
        <div class="loading-spiner">
            <img src="~/Assets/image/spin.gif" />
        </div>
    </div>
    <input type="hidden" for="TissueBankId" id="TissueBankId" value="@ViewBag.user.InfoId" />
    <ul class="breadcrumb breadcrumb-page">
        <div class="breadcrumb-label text-light-gray">You are here: </div>
        <li>
            <a href="@Url.Action("Index", "Home", new { Area = "TissueBank" })">
                <span class="mm-text"><u>Home</u></span>
            </a>
        </li>
        <li class="active"><a href="#"><u>Reports Panel</u></a></li>
        <li class="active"><a href="">Purchase Order</a></li>
    </ul>
    <div class="page-header">
        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm">Purchase Order</h1>
        </div>
    </div>

    <div class="table-header" style="padding-bottom:0px" ng-if="dataLoading!=true">
        <div class="table-caption">
            <div class="row">
                <div class="col-md-2" id="title">
                    Total Orders({{TotalOrders}})@ViewBag.user.InfoId
                </div>
                <div class="col-md-4" id="searchbox" style="margin-bottom:10px">
                    <input class="form-control" ng-model="SearchBy" style="box-shadow: inset 0 1px 5px rgba(0,0,0,.13);" ng-change="search(SearchBy)" placeholder="Search here..." onfocus="this.placeholder=''" onblur="this.placeholder='Search here...'" />
                </div>
                <div class="col-md-3" style="margin-bottom:10px">
                    <label class="filter-col">Per Page: </label>
                    <select class="form-control" style="box-shadow: inset 0 1px 5px rgba(0,0,0,.13); display:inline-block; width:45%" ng-disabled="TotalOrders<1" ng-options="item for item in PageSizes" ng-model="PageSize" ng-change="PageSizeChanged(PageSize)"></select>
                </div>
                <div class="col-md-3" style="margin-bottom:10px">
                    <a href="#"><input type="button" class="btn btn-flat" id="pagination" ng-click="getFirstPage()" ng-disabled="CurrentPage<=1" value="««" /></a>
                    <a href="#"><input type="button" class="btn btn-flat" id="pagination" ng-click="getPreviousPage()" ng-disabled="CurrentPage<=1" value="«" /></a>
                    <span id="page">{{CurrentPage}}/{{TotalPage}}</span>
                    <a href="#"><input type="button" class="btn btn-flat" id="pagination" ng-click="getNextPage()" ng-disabled="CurrentPage*PageSize>TotalOrders" value="»" /></a>
                    <a href="#"><input type="button" class="btn btn-flat" id="pagination" ng-click="getLastPage()" ng-disabled="CurrentPage*PageSize>TotalOrders" value="»»" /></a>
                </div>
            </div>
        </div>
    </div>

    <table ng-if="dataLoading!=true || Orders!=null" class="table table-hover table-striped" id="tablestyle">
        <thead id="headerstyle">
            <tr>
                <th></th>
                <th>
                    <div style="cursor:pointer" ng-click="Sort('OrderId')">
                        <span ng-show="SortExpression  == 'OrderId' && SortDirection=='DESC'" class="fa fa-caret-down"></span>
                        <span ng-show="SortExpression == 'OrderId' && SortDirection=='ASC'" class="fa fa-caret-up"></span>
                        Order ID
                    </div>
                </th>
                <th id="c1">
                    <div style="cursor:pointer" ng-click="Sort('CreatedDate')">
                        <span ng-show="SortExpression  == 'CreatedDate' && SortDirection=='DESC'" class="fa fa-caret-down"></span>
                        <span ng-show="SortExpression == 'CreatedDate' && SortDirection=='ASC'" class="fa fa-caret-up"></span>
                        Order Date
                    </div>
                </th>
                <th id="c2">
                    <div style="cursor:pointer" ng-click="Sort('NeedByDate')">
                        <span ng-show="SortExpression  == 'NeedByDate' && SortDirection=='DESC'" class="fa fa-caret-down"></span>
                        <span ng-show="SortExpression == 'NeedByDate' && SortDirection=='ASC'" class="fa fa-caret-up"></span>
                        Need By Date
                    </div>
                </th>
                <th id="c3">RFQ ID</th>
                <th id="c5">Product Code</th>
                <th id="c4">Product Name</th>
                <th>
                    <div style="cursor:pointer" ng-click="Sort('StatusName')">
                        <span ng-show="SortExpression  == 'StatusName' && SortDirection=='DESC'" class="fa fa-caret-down"></span>
                        <span ng-show="SortExpression == 'StatusName' && SortDirection=='ASC'" class="fa fa-caret-up"></span>
                        Status
                    </div>
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat-start="Order in Orders">
                <td>
                    <button class="icn" ng-if="Order.expanded" ng-click="Order.expanded = false" id="button1">-</button>
                    <button class="icn" ng-if="!Order.expanded" ng-click="Order.expanded = true" id="button2">+</button>
                </td>
                <td style="vertical-align:middle"> {{Order.OrderId}}</td>
                <td class="align" id="c1" style="vertical-align:middle">{{Order.CreatedDate | date : 'yyyy-MM-dd HH:mm:ss'}}</td>
                <td id="c2" style="vertical-align:middle">{{Order.NeedByDate | date : 'yyyy-MM-dd HH:mm:ss'}}</td>
                <td id="c3" style="vertical-align:middle">{{Order.RequestForQuoteId==null ? 'N/A' : Order.RequestForQuoteId}}</td>
                <td id="c5" style="vertical-align:middle">{{Order.ProductCode}}</td>
                <td id="c4" style="vertical-align:middle">{{Order.ProductMasterName}}</td>
                <td id="display">
                    <div id="pending" ng-if="Order.StatusName == 'Pending'">
                        Pending
                    </div>
                    <div id="acknowledged" ng-if="Order.StatusName == 'Acknowledged'">
                        Acknowledged
                    </div>
                    <div id="closed" ng-if="Order.StatusName == 'Received'">
                        Received
                    </div>
                    <div id="declined" ng-if="Order.StatusName == 'Declined By TissueBank'">
                        Declined By Tissue Bank
                    </div>
                </td>
                <td style="vertical-align:middle">
                    
                    @{
                        var ViewCompleteUrl = Url.Action("Manage", "Order", new { OrderId = "{{Order.OrderId}}" });
                        ViewCompleteUrl = HttpUtility.UrlDecode(ViewCompleteUrl);
                    }
                    <a ng-if="Order.StatusName != 'Declined By TissueBank' && Order.StatusName != 'Received'" data-ng-href="@ViewCompleteUrl"><span title="Manage" style="cursor:pointer"><i class="fa fa-pencil-square-o" style="font-size:18px; color:#4bacd0"></i></span></a>
                    <a ng-if="Order.StatusName == 'Declined By TissueBank' || Order.StatusName == 'Received'" data-ng-href="@ViewCompleteUrl"><span title="View" style="cursor:pointer"><i class="fa fa-eye" style="font-size:20px; color:#4bacd0; padding-right:15px;"></i></span></a>
                </td>
            </tr>
            <tr ng-if="Order.expanded" ng-repeat-end="">
                <td colspan="7">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-hover">
                                <tr id="r1">
                                    <td><b>Order Date :</b></td>
                                    <td><i>{{Order.CreatedDate | date : 'yyyy-MM-dd HH:mm:ss'}}</i></td>
                                </tr>
                                <tr id="r2">
                                    <td><b>Need By Date :</b></td>
                                    <td><i>{{Order.NeedByDate | date : 'yyyy-MM-dd HH:mm:ss'}}</i></td>
                                </tr>
                                <tr id="r3">
                                    <td><b>RFQ ID :</b></td>
                                    <td><i>{{Order.RequestForQuoteId==null ? 'N/A' : Order.RequestForQuoteId}}</i></td>
                                </tr>
                                <tr id="r4">
                                    <td><b>Product Name :</b></td>
                                    <td><i>{{Order.ProductMasterName}}</i></td>
                                </tr>
                                <tr id="r5">
                                    <td><b>Product Code :</b></td>
                                    <td><i>{{Order.ProductCode}}</i></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <div ng-if="(Orders.length==0 && dataLoading) || Orders.length==0" style="color:darkgreen;">No orders are available.</div>

    <div class="table-footer" ng-if="dataLoading!=true">
        <div class="table-caption">
            <div class="row">
                <div class="col-md-3" style="float:right">
                    <a href="#"><input type="button" class="btn btn-flat" id="pagination" ng-click="getFirstPage()" ng-disabled="CurrentPage<=1" value="««" /></a>
                    <a href="#"><input type="button" class="btn btn-flat" id="pagination" ng-click="getPreviousPage()" ng-disabled="CurrentPage<=1" value="«" /></a>
                    <span id="page">{{CurrentPage}}/{{TotalPage}}</span>
                    <a href="#"><input type="button" class="btn btn-flat" id="pagination" ng-click="getNextPage()" ng-disabled="CurrentPage*PageSize>TotalOrders" value="»" /></a>
                    <a href="#"><input type="button" class="btn btn-flat" id="pagination" ng-click="getLastPage()" ng-disabled="CurrentPage*PageSize>TotalOrders" value="»»" /></a>
                </div>
            </div>
        </div>
    </div>
    <div class="notifies" notifybar></div>
</div>
