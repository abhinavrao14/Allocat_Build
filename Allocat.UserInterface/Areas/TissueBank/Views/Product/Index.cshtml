    @*<div class="page-header">
            <div class="row">
                 Page header, center on small screens
                <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-list-alt"></i>&nbsp;&nbsp;Display Products</h1>
            </div>
